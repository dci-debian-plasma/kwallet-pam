#!/usr/bin/make -f

include /usr/share/pkg-kde-tools/qt-kde-team/3/debian-qt-kde.mk

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

QT4_BUILD_DIR = build-qt4

override_dh_auto_clean:
	$(overridden_command)
	rm -rf $(QT4_BUILD_DIR)

override_dh_auto_configure:
	dh_auto_configure -- -DCMAKE_INSTALL_PREFIX:PATH=/
	dh_auto_configure --builddirectory=$(QT4_BUILD_DIR) -- \
	    -DCMAKE_INSTALL_PREFIX:PATH=/ -DKWALLET4=1

override_dh_auto_build:
	$(overridden_command)
	dh_auto_build --builddirectory=$(QT4_BUILD_DIR)

override_dh_auto_install:
	$(overridden_command)
	dh_auto_install --builddirectory=$(QT4_BUILD_DIR)

override_dh_install:
	$(overridden_command)
	dh_install --sourcedir $(QT4_BUILD_DIR)
